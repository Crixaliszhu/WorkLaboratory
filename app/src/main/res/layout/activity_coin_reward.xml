<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="金币奖励组件演示"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- 金币奖励组件 -->
    <com.yupao.happynewd.view.CoinRewardView
        android:id="@+id/coinRewardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:background="@drawable/reward_container_background" />

    <!-- 控制按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnPlayAnimation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button_background_blue"
            android:text="播放入场动画"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnChangeValues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button_background_green"
            android:text="随机改变数值"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnChangeRotation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button_background_orange"
            android:text="随机改变旋转角度"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- 说明文本 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:text="使用说明：\n\n1. 点击金币可以领取奖励\n2. 左边金币直接领取，右边金币需要观看视频\n3. 数字和图片会保持相同的旋转角度\n4. 支持动态设置数值和旋转角度\n5. 包含入场动画和点击动画效果"
        android:textColor="#666666"
        android:textSize="14sp"
        android:lineSpacingExtra="4dp" />

</LinearLayout>
