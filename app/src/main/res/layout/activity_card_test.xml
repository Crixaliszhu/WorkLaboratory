<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.yupao.happynewd.LimitMaxSizeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中阿嘎时间佛菩萨飞机啊沙发沙发大苏打实打实的阿达萨达萨达萨"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/edView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:background="#efefefef"
        android:gravity="left|top"
        android:hint="请输入内容"
        android:maxLength="1000"
        android:scrollbars="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edView">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <SeekBar
            android:id="@+id/sbSeekBar"
            android:layout_width="36dp"
            android:layout_height="4dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/indicator_bg"
            android:progressDrawable="@drawable/indicator_bg"
            android:padding="0dp"
            android:thumbOffset="0dp"
            android:thumb="@drawable/indicator_thumb"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>