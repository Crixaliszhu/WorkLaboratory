<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvLeftName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="21dp"
            android:text="工种"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="21dp"
            android:layout_toRightOf="@id/tvLeftName"
            android:background="@color/white"
            android:hint="请选择"
            android:maxLines="5"
            android:textSize="14sp"
            tools:text="123131312312312312312312331，31231231231" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="#EFF1F6" />
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="displayAnimate"
            android:text="Hello World!"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showCoinReward"
            android:text="金币奖励演示"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editView" />

        <com.yupao.happynewd.LimitMaxSizeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中阿嘎时间佛菩萨飞机啊沙发沙发大苏打实打实的阿达萨达萨达萨"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editView" />

        <EditText
            android:id="@+id/editView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:background="#efefefef"
            android:gravity="left|top"
            android:hint="请输入内容"
            android:maxLength="1000"
            android:scrollbars="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_shsb"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSkillTag"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/work_shape_sky_orange_r2"
            android:gravity="center"
            android:onClick="@{()->clickProxy.clickSkillTag(entity)}"
            android:paddingHorizontal="4dp"
            android:text="技能释放"
            android:textColor="#FF9800"
            android:textSize="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgView" />

        <TextView
            android:id="@+id/tvSp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示文案字体大小"
            android:textColor="@color/teal_200"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSkillTag" />

        <TextView
            android:id="@+id/tvDp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文案不跟系统变化字体大小"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSp" />

        <com.yupao.happynewd.view.LimitMaxTextView
            android:id="@+id/lmText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哈哈哈哈啊哈哈哈哈"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDp"
            app:maxSizeDp="24" />

        <com.yupao.happynewd.view.MaxSizeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哈哈哈哈啊哈哈哈哈"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lmText"
            app:maxTextSize="19dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>